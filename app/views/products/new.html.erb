<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited the changes to this product from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1>Add New Product</h1>
<%= form_tag "/products", method: :post do%>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price, "Price: $"%>
    <%= text_field_tag :price, @product.price, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :src, "Image URL"%>
    <%= text_field_tag :src, "", :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :supplier, "Choose Supplier"%>
    <%= collection_select :supplier, :supplier_id, @suppliers, :id, :name %>
  </div>
  <div class="form-group">
    <%= hidden_field_tag :user_id, current_user.id %>
  </div>
  <div> 
    <%= submit_tag "Submit New Product", :class => "btn btn-default" %>
  </div>
<% end %>