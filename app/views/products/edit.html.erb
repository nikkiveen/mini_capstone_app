<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<h1>Edit Product</h1>
<%= form_tag "/products/#{@product.id}", method: :patch do%>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price, "Price: "%>
    <%= text_field_tag :price, number_to_currency(@product.price), :class => "form-control" %>
  </div>
  <div> 
    <%= submit_tag "Submit Changes", :class => "btn btn-default" %>
  </div>
<% end %>